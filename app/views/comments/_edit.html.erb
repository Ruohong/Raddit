<%= form_for [@post, @comment], url: {action: "update"}, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group main-form">
  <%= f.label :comment, class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
  <%= f.text_field :content, class: 'form-control' %>
  	</div>
  <%= f.submit class: 'btn btn-default' %>

  <% end %>