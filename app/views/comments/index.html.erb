<h2> <%= @post.title %></h2><hr>

<h5><%= @post.body %></h5><hr>

<div class="comment-insert"></div>

<%= link_to "New Comment", new_post_comment_path(@post), id: "new_comment", remote: true %>

<% @comments.each do |comment| %>
<div class="comment-div">
	<span><%= comment.content %><span>
	<p>posted by <%= link_to comment.user.email, user_path(comment.user) %> at <%= time_ago_in_words(comment.created_at) %> ago </p>
</div>
<% end %>






