<%= simple_form_for @post, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group main-form">
  <%= f.label :title, class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
  <%= f.text_field :title, class: 'form-control' %>
  	</div>
  </div>
  
  <div class="form-group comment-form">
  <%= f.label :body, class: 'col-sm-2 control-label body-label' %>
      <div class="col-sm-10 comment-body">
  <%= f.text_area :body, class: 'form-control' %>
  	</div>
  </div>


  <%= f.association :categories, as: :check_boxes, class: "category-form" %>


  <%= f.hidden_field :user_id, :value => @current_user.id %>
  
 <%= f.submit "Create Post", class: "btn btn-primary create-post" %>
 <% end %>
