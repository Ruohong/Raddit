<%= simple_form_for @post, url: {action: "update"} do |f| %>
  <div class="form-group main-form">
  <%= f.label :title, class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
  <%= f.text_field :title, class: 'form-control' %>
    </div>

  <div class="form-group">
  <%= f.label :body, class: 'col-sm-2 control-label body-label' %>
      <div class="col-sm-10 comment-body">
  <%= f.text_area :body, class: 'form-control' %>
    </div>

  <label class="col-sm-2 control-label category-label" for="post_body">Category</label>
  <div class="input-group checkbox">
      <div class="choicebox">
            <%= f.association :categories, as: :check_boxes %>
      </div>
  </div>


 <%= f.submit "Edit Post", class: "btn btn-primary create-post" %>
 <% end %>